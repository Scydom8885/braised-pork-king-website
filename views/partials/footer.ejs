<!-- Footer JavaScript -->
<script>

    // Smooth scroll to footer when called
    window.scrollToFooter = function() {
        document.querySelector('.footer').scrollIntoView({
            behavior: 'smooth',
            block: 'start'
        });
    };

    // Map click handler - open in Google Maps app
    const mapFrame = document.querySelector('.google-map');
    if (mapFrame) {
        mapFrame.addEventListener('click', function() {
            // Track map interaction
            console.log('Google Maps interaction');
        });
    }

    // Footer animations on scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const footerObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate-fade-in');
            }
        });
    }, observerOptions);

    // Observe footer sections
    document.querySelectorAll('.footer-section').forEach(section => {
        footerObserver.observe(section);
    });


// Business hours helper
window.getBusinessStatus = function() {
    const now = new Date();
    const day = now.getDay(); // 0 = Sunday, 1 = Monday, etc.
    const hour = now.getHours();

    let isOpen = false;

    if (day >= 1 && day <= 6) { // Monday - Saturday
        isOpen = hour >= 11 && hour < 21; // 11 AM - 9 PM
    } else { // Sunday
        isOpen = hour >= 12 && hour < 20; // 12 PM - 8 PM
    }

    return {
        isOpen: isOpen,
        status: isOpen ? 'Open Now' : 'Closed',
        emoji: isOpen ? 'üü¢' : 'üî¥'
    };
};

// Update business status if elements exist
const statusElements = document.querySelectorAll('.business-status');
if (statusElements.length > 0) {
    const status = window.getBusinessStatus();
    statusElements.forEach(element => {
        element.innerHTML = `${status.emoji} ${status.status}`;
        element.style.color = status.isOpen ? 'var(--success)' : 'var(--secondary)';
    });
}
</script>